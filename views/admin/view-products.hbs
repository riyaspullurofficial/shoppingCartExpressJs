<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto m-3 " >Add Product</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Rate</th>
                    <th scope="col">Image Icon</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td> {{this.description}} </td>
                    <td> {{this.price}} </td>
                    <td><img src={{this.imglink}} style="width:50px ;height:50px;">  </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>